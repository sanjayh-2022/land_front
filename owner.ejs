<%layout('./layouts/boilerplate')%>
<body>
    <div style="height: 110px;">  </div>
    <section class="mainbuyer py-5" >
        <div class="container py-5">
         
             <span class="usercircle"><img src="data:image/jpeg;base64," alt=""></span>
    
        </div>
    </section>
    <section class="buyerprintingdetails">
        <div class="row">
            <h2 class="offset-1 mb-3">Owner</h2>
            <form action="/ownerdetails" method="GET">
              <button class="btn btn-dark offset-1 mt-4" style="width: 10rem !important;">Register a land</button>
            </form>
        </div>
    </section>
    <section style="overflow: hidden !important;position: relative;margin-top: 20rem;">
        <h3 class="ms-5 mb-5">Lands Registered:</h3>
        <div class="row row-cols-lg-3 ms-5">
            <% landDetailsArray.forEach(function(land) { %>
                <a href="/owner/<%= land.id%>">
                    <div class="card mb-5">
                        <div class="img-wrapper">
                            <img src="https://media.istockphoto.com/id/909423306/photo/modern-multilevel-house-exterior-with-pool.webp?b=1&s=170667a&w=0&k=20&c=lVkUVRVlGBio7oMSYkx_tQuydlhJnBkpnVSuBBHtRMM="
                                alt="...">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title head1" style="font-weight: 600;">Land <%= land.id %></h5>
                            <p class="card-text per1">Area: <%= land.area %> sq ft</p>
                            <p class="card-text per1">Price: &#8377; <%= land.landPrice %></p>
                            <!-- Add more details as needed -->
                        </div>
                    </div>
                </a>
                <% }); %>
    </div>
    </section>
    <section style="overflow: hidden !important;position: relative;margin-top: 7rem;">
        <h3 class="ms-5 mb-5">Lands For Sale:</h3>
        <div class="row row-cols-lg-3 ms-5">
            <% landSaleArray.forEach(function(land) { %>
                <a href="/owner/<%= land.id%>">
                    <div class="card mb-5">
                        <div class="img-wrapper">
                            <img src="https://media.istockphoto.com/id/909423306/photo/modern-multilevel-house-exterior-with-pool.webp?b=1&s=170667a&w=0&k=20&c=lVkUVRVlGBio7oMSYkx_tQuydlhJnBkpnVSuBBHtRMM="
                                alt="...">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title head1" style="font-weight: 600;">Land <%= land.id %></h5>
                            <p class="card-text per1">Area: <%= land.area %> sq ft</p>
                            <p class="card-text per1">Price: &#8377; <%= land.landPrice %></p>
                            <!-- Add more details as needed -->
                        </div>
                    </div>
                </a>
                <% }); %>
    </div>
    </section>
    <section style="overflow: hidden !important;position: relative;margin-top: 7rem;">
        <h3 class="ms-5 mb-5">Land Buy Requests</h3>
        <table class="table ms-5">
            <thead>
                <tr>
                    <th scope="col">Request ID</th>
                    <th scope="col">Land ID</th>
                    <th scope="col">Land Address</th>
                    <th scope="col">Land Price</th>
                    <th scope="col">Buyer ID</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% receivedRequests.forEach(function(request) { %>
                <tr>
                    <td><%= request.requestId %></td>
                    <td><%= request.landId %></td>
                    <td><%= request.landAddress %></td>
                    <td><%= request.landPrice %></td>
                    <td><%= request.buyerId %></td>
                    <td>
                        
                        <form action="/accept-buy-request/<%= request.requestId %>" method="GET" style="display: inline;">
                            <button type="submit" class="btn btn-success">Accept</button>
                        </form>
                        <form action="/reject-buy-request/<%= request.requestId %>" method="GET" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>
                        
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</body>